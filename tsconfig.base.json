{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@esoft7s/collection/domain": ["libs/collection/domain/src/index.ts"],
      "@esoft7s/collection/feature-collection": [
        "libs/collection/feature-collection/src/index.ts"
      ],
      "@esoft7s/main/feature-home": ["libs/main/feature-home/src/index.ts"],
      "@esoft7s/main/feature-shell": ["libs/main/feature-shell/src/index.ts"],
      "@esoft7s/main/ui-content": ["libs/main/ui-content/src/index.ts"],
      "@esoft7s/main/ui-navbar": ["libs/main/ui-navbar/src/index.ts"],
      "@esoft7s/search/feature-search": [
        "libs/search/feature-search/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
